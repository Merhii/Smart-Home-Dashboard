<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:left="15dp" android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="20dp" /> <!-- Match corner radius -->
        </shape>
    </item>
    <!-- Original rounded button -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:color="#000000"
                android:width="1dp" />
            <solid android:color="@color/white" /> <!-- Add solid color for the button -->
        </shape>
    </item>
</layer-list>
