<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84A9C0"
    android:padding="16dp"
    >

    <!-- Header Section -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Notification Icon -->
    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_notifications_none_24"
        android:contentDescription="Notifications"
        android:clickable="true"
        android:focusable="true" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="341dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/account_circle_37dp_0_fill0_wght400_grad0_opsz40"
        android:contentDescription="Profile"
        android:clickable="true"
        android:focusable="true" />

    <!-- Electricity Consumption -->
    <TextView
        android:id="@+id/tvElectricityConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:text="Electricity Consumption"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvElectricityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="161dp"
        android:text="180kWh"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Approx Bill -->
    <TextView
        android:id="@+id/tvApproxBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="124dp"
        android:text="Approx Bill"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvApproxBillValue"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginStart="311dp"
        android:layout_marginTop="161dp"
        android:text="26.55$"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/tvHomeOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="227dp"
        android:text="Home Overview"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Button 1: Living -->
        <FrameLayout
            android:id="@+id/containerLiving"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="313dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FF0004"
            android:elevation="4dp">

            <Button
                android:id="@+id/living"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <ImageView
                android:layout_marginTop="-10dp"
                android:layout_width="72dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/chair" />

            <TextView
                android:id="@+id/tvLiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Living room"
                android:textColor="#000000"
                android:textSize="21sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>

        <!-- Button 2: Bed -->
        <FrameLayout
            android:id="@+id/containerBed"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="313dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FBFF00"
            android:elevation="4dp">

            <Button
                android:id="@+id/bed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <ImageView
                android:layout_marginTop="-6dp"
                android:layout_width="72dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/bed"/>
            <TextView
                android:id="@+id/tvBed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Bed room"
                android:textColor="#000000"
                android:textSize="21sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>

        <!-- Button 3: Bath -->
        <FrameLayout
            android:id="@+id/containerBath"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#1EFF00"
            android:elevation="4dp">

            <Button
                android:id="@+id/bath"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <ImageView
                android:layout_marginTop="-6dp"
                android:layout_width="72dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/shower"/>
            <TextView
                android:id="@+id/tvBath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Bath room"
                android:textColor="#000000"
                android:textSize="21sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>

        <!-- Button 4: Kitchen -->
        <FrameLayout
            android:id="@+id/containerKitchen"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#00FFFB"
            android:elevation="4dp">

            <Button
                android:id="@+id/kitchen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <ImageView
                android:layout_marginTop="-6dp"
                android:layout_width="72dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/kitchen"/>

            <TextView
                android:id="@+id/tvKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Kitchen"
                android:textColor="#000000"
                android:textSize="21sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>

    </RelativeLayout>
<TextView
    android:textColor="#000000"
    android:layout_width="200dp"
    android:layout_height="35dp"
    android:text="Quick Profiles:"
    android:layout_marginStart="20dp"
    android:layout_marginTop="760dp"
    android:textSize="16sp"
    android:fontFamily="@font/poppins_semibold"
    android:textAllCaps="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/containerP1"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="810dp"
            android:background="@drawable/quick_profile"
            android:backgroundTint="#000000"
            android:elevation="4dp">

            <Button
                android:id="@+id/P1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <Switch
                android:id="@+id/switchControl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:track="@drawable/track"
                android:scaleX="1.1"
            />
            <TextView
                android:id="@+id/tvP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-18dp"
                android:text="sleeping"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerP2"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="810dp"
            android:background="@drawable/quick_profile"
            android:backgroundTint="#000000"
            android:elevation="4dp">

            <Button
                android:id="@+id/P2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <Switch
                android:id="@+id/switchControl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:track="@drawable/track"
                android:scaleX="1.1"
                />
            <TextView
                android:id="@+id/tvP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-18dp"
                android:text="Good morning"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerP3"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="810dp"
            android:background="@drawable/quick_profile"
            android:backgroundTint="#000000"
            android:elevation="4dp">

            <Button
                android:id="@+id/P3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true" />
            <Switch
                android:id="@+id/switchControl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:track="@drawable/track"
                android:scaleX="1.1"
                />
            <TextView
                android:id="@+id/tvP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-18dp"
                android:text="Leaving home"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
