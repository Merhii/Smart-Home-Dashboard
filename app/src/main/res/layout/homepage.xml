<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7393B3">

    <!-- Logo -->
    <TextView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:text="LOGO"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"/>


    <!-- Central text -->
    <!-- First TextView -->
    <TextView
        android:id="@+id/line1"
        android:layout_width="312dp"
        android:layout_height="27dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="169dp"
        android:text="Let's make your home more comfy"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"/>

    <!-- Second TextView -->
    <TextView
        android:id="@+id/line2"
        android:layout_width="174dp"
        android:layout_height="27dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="207dp"
        android:text="One Click at a Time"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"/>

    <!-- Decorative shapes -->
    <View
        android:layout_width="120dp"
        android:layout_height="238dp"
        android:layout_marginStart="-35dp"
        android:layout_marginTop="582dp"
        android:background="@drawable/rounded_rect" />


    <View
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="733dp"
        android:background="@drawable/circle" />
    <View
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="809dp"
        android:background="@drawable/rounded_rect" />
    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="722dp"
        android:background="@drawable/rounded_button"
        android:text="Start"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"/>

</RelativeLayout>
