<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84A9C0">

    <!-- Logo at the top, centered -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
    android:layout_marginStart="155dp"
        android:src="@drawable/koala" />


    <TextView
        android:id="@+id/koalaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="167dp"
        android:layout_marginTop="-30dp"

    android:text="KOALA"
    android:textColor="#000000"
    android:textSize="22sp"
    android:textStyle="bold"
    android:fontFamily="@font/poppins_bold" />

    <!-- Central text -->
    <!-- First TextView -->
    <TextView
        android:id="@+id/line1"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="169dp"
        android:text="Let's make your home comfy"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"/>

    <!-- Second TextView -->
    <TextView
        android:id="@+id/line2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="207dp"
        android:text="One Click at a Time"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:src="@drawable/homepage_image"
        android:layout_marginStart="0dp"
        android:layout_marginTop="251dp"
        android:scaleType="centerCrop"
        />

    <!-- Decorative shapes -->
    <View
        android:layout_width="120dp"
        android:layout_height="238dp"
        android:layout_marginStart="-35dp"
        android:layout_marginTop="582dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#49E1D4"/>

    <View
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="733dp"
        android:background="@drawable/circle"
        android:backgroundTint="#7A2C9F"/>

    <View
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="809dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#B1BEFE"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="722dp"
        android:background="@drawable/rounded_button"
        android:text="HOME"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="#21F3F3"/>

</RelativeLayout>
